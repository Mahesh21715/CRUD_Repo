<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD_Demo.Views.AddUserPage"
             Title="Add User">
    <ContentPage.Content>
        <StackLayout>
            <Entry  Placeholder="User ID" Text="{Binding Id}" Keyboard="Text" />
            <Entry  Placeholder="User Name" Text="{Binding Name}" Keyboard="Text"/>
            <Entry  Placeholder="User Address" Text="{Binding Address}" Keyboard="Text"/>
            <!--<Button Text="Add User" Clicked="SaveUser"/>-->

            <Button Text="Add User" Command="{Binding AddCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>